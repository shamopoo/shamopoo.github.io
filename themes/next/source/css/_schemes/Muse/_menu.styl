.site-nav {
  +mobile() {
    position: fixed;
    left: 0;
    top: 0px;
    margin: 0;
    width: 100%;
    padding: 0;
    background: #fff;
    height:380px;
    border-bottom: 1px solid $gray-lighter;
    z-index: $zindex-3;
    overflow:hidden;
  }
}

.menu {
  +mobile() { text-align: left; }
}
.menu .menu-item {
  +mobile() {
    display: block;
    margin: 0 10px;
    vertical-align: top;
  }

  br {
    +mobile() { display: none; }
  }

  a {
    +mobile() { padding: 5px 10px; }
  }
  .fa { margin-right: 0; }
}
