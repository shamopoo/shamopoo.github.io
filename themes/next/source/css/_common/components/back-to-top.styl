.back-to-top {
  box-sizing: border-box;
  position: fixed;
  bottom: $b2t-position-bottom;
  top:-900px;
  right: 70px;
  z-index: 8000;
  padding: 0 6px;
  width: 70px;
  height: 900px;
  background: url(https://moetu.fastmirror.org/images/2018/05/15/scrolla0ef8027e8208da5.png);
  font-size: $b2t-font-size;
  opacity: $b2t-opacity;
  color: $b2t-color;
  cursor: pointer;
  text-align: center;
  -webkit-transform: translateZ(0);
  transition-property: bottom;
  the-transition();
  transition: all .5s ease-in-out;

  +tablet() {
    fixbutton() if hexo-config('sidebar.onmobile');
    hide() if not hexo-config('sidebar.onmobile');
  }
  +mobile() {
    fixbutton() if hexo-config('sidebar.onmobile');
    hide() if not hexo-config('sidebar.onmobile');
  }

  &.back-to-top-on {
    top:-333px;
  }
}
