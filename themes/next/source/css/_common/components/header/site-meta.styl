.site-meta {
  margin: 0;
  text-align: $site-meta-text-align;
  position:absolute;
  overflow: hidden;
  top:50%;
  left:50%;
  width: 300px;
  transform:translate(-50%, -50%);
  +mobile() { text-align: center;display:none; }
}

.brand {
  position: relative;
  display: inline-block;
  padding:10px 0;
  color: $brand-bg;
  border-bottom: none;
}

.logo {
  display: inline-block;
  margin-right: 5px;
  line-height: 36px;
  vertical-align: top;
}

.site-title {
  font-family: "Lobster Two";
  display: inline-block;
  vertical-align: top;
  line-height: 60px;
  font-size: 60px;
  color: #fff;
  font-weight: normal;
  transition: all .2s;
  +mobile() { display:none; }
}

.site-subtitle {
  margin-top: 10px;
  font-size: $subtitle-font-size;
  color: $subtitle-color;
}

.use-motion {
  .brand { opacity: 0; }
}
