.site-meta {
  margin: 0;
  overflow:hidden;
  text-align: $site-meta-text-align;
  position:absolute;
  top:50%;
  left:50%;
  transform:translate(-50%, -50%);
  +mobile() { text-align: center;display:none; }
}

.brand {
  position: relative;
  display: inline-block;
  padding:10px 0;
  color: $brand-bg;
  border-bottom: none;
}

.logo {
  display: inline-block;
  margin-right: 5px;
  line-height: 36px;
  vertical-align: top;
}

.site-title {
  font-family: "Lobster Two";
  display: inline-block;
  vertical-align: top;
  line-height: 60px;
  font-size: 60px;
  color: #fff;
  font-weight: normal;
  +mobile() { display:none; }
}
.site-title:before, .site-title:after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    width: 100%;
    background: rgba(0,0,0,0);
    clip: rect(0,0,0,0);
}


.site-subtitle {
  margin-top: 10px;
  font-size: $subtitle-font-size;
  color: $subtitle-color;
}

.use-motion {
  .brand { opacity: 0; }

  .logo, .site-title, .site-subtitle {
    opacity: 0;
    position: relative;
    top: -10px;
  }
}
