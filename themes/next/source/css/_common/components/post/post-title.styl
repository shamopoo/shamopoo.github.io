.posts-expand .post-title {
  text-align: center;
  word-break: break-word;
  font-weight: $posts-expand-title-font-weight
}
.post-title-link span:hover{
  color:#FE9600;
}
.posts-expand .post-title-link {
  display: inline-block;
  position: relative;
  color: #504e4e;
  border-bottom: none;
  line-height: 1.2;
  vertical-align: top;
  transition: all 0.3s;
  &:hover {
    color: #FE9600;
  }
  &::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    visibility: hidden;
    transform: scaleX(0);
    the-transition();
  }

  &:hover::before {
    visibility: visible;
    color: #3eb4fc;
    transform: scaleX(1);
  }

  .fa { font-size: 16px; }
}
